 * Date: 25/02/2023
 *************************************************************************************************************/
#include <stdio.h>

int main(void)
{
	int var;
	int *ptr;
	int **pptr;
	int *pointer = NULL;
	var = 500;
	pointer = &var;
	ptr = &var;
	pptr = &ptr;

	printf("var = %d\n", var);
	printf("pointer = %d\n", pointer);
	printf("ptr = %p\n", ptr);
	printf("*ptr = %d\n", *ptr);
	printf("**pptr = %d\n", **pptr);


}
